/* component/upload/upload.wxss */

.images-box {
  border-radius: 10rpx;
  width: 100%;
}

.imageCount {
  height: 80rpx;
  line-height: 80rpx;
}

.images {
  height: 240rpx;
  display: flex;
  align-items: center;
}
.addImageIcon{
  text-align: center;
  line-height: 200rpx;
  background-color: #f7f7f7;
}
.addImageIconHover{
  background-color: #C0C4CC;
}
.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.pliamge_item {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  margin: 15rpx;
  justify-content: center;
  position: relative;
  align-items: center;
}
.iamge_cancel {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  right: -12rpx;
  top: -10rpx;
  z-index: 800;
  background: black;
}